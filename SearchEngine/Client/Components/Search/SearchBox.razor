@using SearchEngine.Shared.Entity.Search;

 <div class="wrapper">
      <div class="search-input @(IsDropdownVisible? "active": "")">
        <a href="" target="_blank" hidden></a>
        <input 
        type="text" 
        placeholder="Type to search.. or press Ctrl + Q" 
        @onfocus="OnGetFocusHandler" 
        @onblur="OnLoseFofusHanlder"
        @oninput="(ChangeEventArgs args)=> OnChangeInputValueHanlder(args.Value.ToString())">

        <div class="autocom-box" style="display: @(IsDropdownVisible? "block": "none")">
          <div class="help_keys_container">
              <span >
                  <kbd>&darr;</kbd>
                  <kbd>&uarr;</kbd>
                  Press to navigate
              </span>
              <span>
                  <kbd>&crarr;</kbd>
                  To Select
              </span>
          </div>
          <!-- Suggestion items -->
          @RenderSuggestions()
        </div>
        <div  class="icon"><i class="fas fa-search"></i></div>
      </div>
 </div>

<style>
 
.wrapper{
  max-width: 450px;
  margin: 150px auto;
}
.wrapper .search-input{
  background: #fff;
  width: 100%;
  border-radius: 5px;
  position: relative;
  box-shadow: 0px 1px 5px 3px rgba(0,0,0,0.12);
}
.search-input input{
  height: 55px;
  width: 100%;
  outline: none;
  border: none;
  border-radius: 5px;
  padding: 0 60px 0 20px;
  font-size: 18px;
  box-shadow: 0px 1px 5px rgba(0,0,0,0.1);
}
.search-input.active input{
  border-radius: 5px 5px 0 0;
}
.search-input .autocom-box{
  padding: 0;
  opacity: 0;
  pointer-events: none;
  max-height: 280px;
  overflow-y: auto;
}
.search-input.active .autocom-box{
  padding: 10px 8px;
  opacity: 1;
  pointer-events: auto;
}
.autocom-box i{
    margin-right: 12px;
}

.autocom-box li{
  list-style: none;
  padding: 8px 12px;
  display: none;
  width: 100%;
  cursor: default;
  border-radius: 3px;
}
.search-input.active .autocom-box li{
  display: block;
}
.autocom-box li:hover{
  background: #efefef;
}
.search-input .icon{
  position: absolute;
  right: 0px;
  top: 0px;
  height: 55px;
  width: 55px;
  text-align: center;
  line-height: 55px;
  font-size: 20px;
  color: #644bff;
  cursor: pointer;
}
.result_group_header{
    padding: 6px;
    border-bottom: 1px solid;
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    justify-content: space-between;
}
.help_keys_container{
    display: flex;
    width: 100%;
    padding: 6px;
}
 .help_keys_container span{
     margin-right: 25px;
 }
 kbd {
    padding: .2rem .4rem;
    font-size: 87.5%;
    color: #fff;
    background-color: #212529;
    border-radius: .2rem;
}
</style>
